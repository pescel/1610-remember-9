<article class='spec-reminder-item'>
  {{#link-to 'reminders.reminder' reminder.id}}
    <h2 class='spec-reminder-title'>
      {{reminder.title}}
    </h2>
  {{/link-to}}
  <p class='spec-reminder-date'>{{reminder.date}}</p>
  <p class='spec-reminder-notes'>{{reminder.notes}}</p>
  {{#link-to 'reminders.reminder.edit' reminder}}
    <button class='spec-reminder-edit-link'>
      Edit Reminder
    </button>
  {{/link-to}}
  {{#link-to 'reminders'}}
    <button class='spec-reminder-delete-link' {{action 'deleteReminder'}}>
      Delete Reminder
    </button>
  {{/link-to}}
</article>
